#!/usr/bin/env bash

{{ template "script_darwin_only" . }}
{{ template "script_no_root" . }}
{{ template "script_caffeinate" . }}
{{ template "script_brew_path" . }}

if [ -z ${HOMEBREW_PREFIX+x} ]; then
  echo "[+] Installing Homebrew; your password will be required"
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
{{ if eq .chezmoi.arch "arm64" }}
  eval "$(/opt/homebrew/bin/brew shellenv)"
{{ else }}
  eval "$(/usr/local/bin/brew shellenv)"
{{ end }}
else
  echo "[~] Homebrew is installed; prefix is $HOMEBREW_PREFIX"
fi

echo "[+] Turning off Homebrew telemetry"
brew analytics off
